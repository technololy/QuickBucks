            <c:RelativeFrames Grid.Column="2" HeightRequest="350" WidthRequest="150" />
        </Grid>
        <StackLayout Margin="5,0,5,0" Grid.Row="3">
            <Label Text="OTHER LOAN PRODUCTS" TextColor="White" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"  />
        </StackLayout>
        <Grid Grid.Row="4" ColumnSpacing="0">
            <c:RelativeFrames Grid.Column="0" HeightRequest="350" WidthRequest="150" />
            <c:RelativeFrames Grid.Column="1" HeightRequest="350" WidthRequest="150" />
            <c:RelativeFrames Grid.Column="2" HeightRequest="350" WidthRequest="150" />
        </Grid>
    </Grid>
